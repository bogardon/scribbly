<h2><%= @collaboration.name %></h2>
<p><%= @collaboration.description %></p>

<%= link_to "Create Campaign", new_collaboration_campaign_url(@collaboration) %>

<p>
  <%= link_to "Create Post", new_collaboration_post_url(@collaboration) %>
</p>

<div class='row'>
  <div class='small-1 columns'>
    <a id='left-arrow'><i class='fi-arrow-left'></i></a>
  </div>
  <div class='small-1 columns'>
    <a id='right-arrow'><i class='fi-arrow-right'></i></a>
  </div>
</div>

<div class='row'>
  <div class='small-12 columns'>
    <ul id='calendar' data-collaboration-id="<%=@collaboration.id%>" class="small-block-grid-7">
    </ul>
  </div>
</div>


<script type="text/template" id="day-template">
  <li class='day-list-item'>
    <div class='day-title'>
      <%%= moment.day %> <%%= moment.month %>/<%%= moment.date %>
    </div>
    <ul class='post-list'>
    <%% _.each(posts, function(p) { %>
      <li class='post-list-item'>
        <div class='post-title'>
          <a href="/posts/<%%= p.id%>"><%%= p.name %> <%%= p.time %></a>
        </div>
      </li>
    <%% }) %>
    </ul>
  </li>
</script>

<%= link_to "Invite Members", collaboration_memberships_url(@collaboration) %>
<br>
<%= link_to "Back", collaborations_url %>
