<h2><%= @collaboration.name %></h2>
<p><%= @collaboration.description %></p>

<div class='row'>
  <div class='small-1 small-offset-2 columns'>
    <a id='left-arrow'><i class='fi-arrow-left'></i></a>
  </div>
  <div class='small-1 small-offset-6 end columns'>
    <a id='right-arrow'><i class='fi-arrow-right'></i></a>
  </div>
</div>

<div class='row'>
  <div class='small-2 columns'>
    <%= link_to "Create Campaign", new_collaboration_campaign_url(@collaboration) %>
    <br>
    <%= link_to "Create Post", new_collaboration_post_url(@collaboration) %>
  </div>
  <div class='small-8 columns'>
    <ul id='calendar' data-collaboration-id="<%=@collaboration.id%>" class="small-block-grid-7">
    </ul>
  </div>
  <div class='small-2 columns'>
    <h6 class='section-title'><strong>Members</strong></h6>
    <%= form_for :member, url: collaboration_memberships_url(@collaboration), remote: true, html: {id: "membership-form"} do |f| %>
    <%= f.text_field :email, placeholder: "Add member" %>
    <% end %>
    <ul id='membership-list' data-collaboration-id="<%= @collaboration.id %>">
    </ul>
    <div>
  </div>
</div>

<%= link_to "Back", collaborations_url %>

<script type="text/template" id="membership-template">
  <li class='membership-list-item'>
    <%%= user.email %>
    <a href='/memberships/<%%= id %>' data-type='json' data-remote=true data-method='delete' rel='nofollow' class='membership-x'><i class='fi-x'></i></a>
  </li>
</script>

<script type="text/template" id="day-template">
  <li class='day-list-item'>
    <div class='day-title'>
      <%%= moment.day %> <%%= moment.month %>/<%%= moment.date %>
    </div>
    <ul class='post-list'>
    <%% _.each(posts, function(p) { %>
      <li class='post-list-item'>
        <div class='post-title'>
          <a href="/posts/<%%= p.id%>"><%%= p.name %> <%%= p.time %></a>
        </div>
      </li>
    <%% }) %>
    </ul>
  </li>
</script>
