<h2><%= @campaign.name %></h2>

<p>
  <%= @campaign.description %>
</p>

<p>
  <%= link_to "Create Post", new_campaign_post_url(@campaign) %>
</p>

<div class='row'>
  <div class='small-1 columns'>
    <a><i class='fi-arrow-left' id='left-arrow'></i></a>
  </div>
  <div class='small-1 columns'>
    <a><i class='fi-arrow-right' id='right-arrow'></i></a>
  </div>
</div>

<div class='row'>
  <div class='small-12 columns'>
    <ul id='calendar' data-campaign-id="<%=@campaign.id%>" class="small-block-grid-7">
    </ul>
  </div>
</div>

<p>
  <%= link_to "Back", collaboration_url(@campaign.collaboration) %>
</p>

<script type="text/template" id="day-template">
  <li>
    <div>
      <%%= month %>/<%%= date %>
    </div>
    <ul>
    <%% _.each(posts, function(p) { %>
      <li>
        <a href="/posts/<%% p.id%>">
          <%%= p.name %>
        </a>
      </li>
    <%% }) %>
    </ul>
  </li>
</script>
